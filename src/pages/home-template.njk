---
renderData:
  section: "home"
permalink: "/"
---

{% extends "layouts/home.njk" %}

{% block content %}
    {% set content = collections.page[1].data %}

    {% if content.hero -%}
        <section class="bp-home-content">
            <h2>{{ content.title }}</h2>

            {% if content.description -%}
                {{ content.description | markdown | safe }}
            {%- endif %}
        </section>

        <div class="bp-home-detail" style="background-image: url({{ content.hero }})"></div>
    {%- endif %}

    {% if content.content -%}
        {{ content.content | markdown | safe }}
    {%- endif %}
{% endblock %}
