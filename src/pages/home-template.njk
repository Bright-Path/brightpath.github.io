---
renderData:
  section: "home"
pagination:
    data: collections.home
    alias: home
    size: 1
permalink: "/"
---

{% extends "layouts/main.njk" %}

{% block content %}

    {% if home.data.title -%}
        <h1 class="bpbc-accessible-text">{{ home.data.title }}</h1>
    {%- endif %}

    <img src="/assets/images/bright-path-logo.jpg" alt="Bright Path Brewing Company logo" class="bpbc-logo" />

    {% if home.data.content -%}
        {{ home.data.content | markdown | safe }}
    {%- endif %}

{% endblock %}
