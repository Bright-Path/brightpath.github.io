{% macro postListItem(links, icons) %}
    <ul class="bp-post-grid">
        {% for link in links -%}
            <li class="bp-post-item">
                <a class="bp-post-link" href="{{ link.slug }}">
                    {% if link.icon -%}
                        {{ link.icon | svgContents | safe }}
                    {% else %}
                        {% set icon = icons.post_link | string %}
                        {{ icon | svgContents | safe }}
                    {%- endif %}

                    <span class="bp-post-link-title">{{ link.title }}</span>
                </a>
            </li>
        {%- endfor %}
    </ul>
{% endmacro %}
