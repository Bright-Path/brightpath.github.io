# Editor configuration, see https://editorconfig.org/
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

# Because https://github.com/npm/npm/pull/3062
[package.json]
indent_size = 2
insert_final_newline = false
